<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
<!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    /* ---------- GLOBAL ---------- */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      display: flex;
      min-height: 100vh;
      background: #f4f6f9;
      color: #333;
      overflow-x: hidden;
    }

    /* ---------- SIDEBAR ---------- */
    .sidebar {
      width: 250px;
      background: #111827;
      color: #fff;
      display: flex;
      flex-direction: column;
      padding: 20px 0;
      transition: 0.3s ease;
    }

    .sidebar h2 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 22px;
      letter-spacing: 1px;
    }

    .sidebar a {
      text-decoration: none;
      color: #cbd5e1;
      padding: 12px 20px;
      display: block;
      transition: 0.3s;
      font-size: 16px;
    }

    .sidebar a:hover {
      background: #2563eb;
      color: #fff;
      padding-left: 30px;
    }

    /* ---------- MAIN CONTENT ---------- */
    .main {
      flex: 1;
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    .topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #fff;
      padding: 15px 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }

    .toggle-btn {
      font-size: 20px;
      cursor: pointer;
      background: #2563eb;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 8px 12px;
      transition: 0.3s;
    }

    .toggle-btn:hover {
      background: #1e40af;
    }

    /* ---------- DASHBOARD CARDS ---------- */
    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
    }

    .card {
      background: #fff;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
      transition: transform 0.3s, box-shadow 0.3s;
      cursor: pointer;
    }

    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .card h3 {
      margin-bottom: 10px;
      font-size: 18px;
      color: #2563eb;
    }

    .card p {
      font-size: 15px;
      color: #555;
    }

    /* ---------- COLLAPSE SIDEBAR ---------- */
    .collapsed {
      width: 70px;
    }

    .collapsed h2 {
      display: none;
    }

    .collapsed a {
      text-align: center;
      padding: 12px 0;
    }

    .collapsed a:hover {
      padding-left: 0;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <h2>Admin</h2>
    <a href="#">ðŸ“Š Dashboard</a>
    <a href="vusers">ðŸ‘¤ Users</a>
<a href="venq">
 <i class="fas fa-question-circle nav-icon"></i>
  <span class="nav-item-text">Enquiry</span>
                </a>

    <a href="addproducts">ðŸ“¦ Products</a>
    <a href="vproducts">ðŸ“¦View Products</a>
<a href="vorders">
                    <i class="fas fa-shopping-cart nav-icon"></i>
                    <span class="nav-item-text">Orders</span>
                </a>

        <a href="setting">âš™ Settings</a>
    <a href="logout">ðŸšª Logout</a>
  </div>

  <!-- Main -->
  <div class="main">
    <div class="topbar">
      <button class="toggle-btn" id="toggleBtn">â˜°</button>
      <h1>Dashboard</h1>
      <div>Welcome <%= aname %></div>
    </div>

    <div class="cards">
      <div class="card">
        <h3>Add Product</h3>
        <div>
    <center>
    <form id="productForm" style="width: 600px; margin: 20px;" action="productprocess" method="post" enctype="multipart/form-data">
        <fieldset style="border: 2px solid #3366cc; padding: 20px; border-radius: 5px; background: #f9f9f9;">
            <legend style="font-size: 18px; font-weight: bold; color: #3366cc;">Product Information</legend>
            
            <table border="0" cellpadding="10" cellspacing="0" width="100%">
                <!-- Product ID -->
                <tr>
                    <td width="150"><strong>Product ID:</strong></td>
                    <td>
                        <input type="text" 
                               id="productId" 
                               
                               size="40"
                               placeholder="P-001"
                               required
                               style="padding: 8px; border: 1px solid #ccc; border-radius: 3px;"
                               name="pid">
                    </td>
                </tr>
                
                <!-- Product Name -->
                <tr>
                    <td><strong>Product Name:</strong></td>
                    <td>
                        <input type="text" 
                               id="productName" 
                               
                               size="40"
                               placeholder="Enter product name"
                               required
                               style="padding: 8px; border: 1px solid #ccc; border-radius: 3px;"
                               name="pname">
                    </td>
                </tr>
                
                <!-- Category -->
                <tr>
                    <td><strong>Category:</strong></td>
                    <td>
                        <input type="text" 
                               id="category" 
                               name="pcategory"
                               size="40"
                               placeholder="Electronics, Clothing, etc."
                               required
                               style="padding: 8px; border: 1px solid #ccc; border-radius: 3px;"
                               >
                    </td>
                </tr>
                
                <!-- Quantity and Price in same row -->
                <tr>
                    <td><strong>Quantity:</strong></td>
                    <td>
                        <input type="number" 
                               id="quantity" 
                              
                               min="0"
                               placeholder="0"
                               required
                               style="padding: 8px; border: 1px solid #ccc; border-radius: 3px; width: 120px;"
                               name="pquantity">
                    </td>
                </tr>
                
                <tr>
                    <td><strong>Price ($):</strong></td>
                    <td>
                        <input type="number" 
                               id="price" 
                                
                               min="0"
                               step="0.01"
                               placeholder="0.00"
                               required
                               style="padding: 8px; border: 1px solid #ccc; border-radius: 3px; width: 120px;"
                               name="pprice">
                    </td>
                </tr>
                
                <!-- Description -->
                <tr>
                    <td valign="top"><strong>Description:</strong></td>
                    <td>
                        <textarea id="description" 
                                   
                                  rows="4"
                                  cols="38"
                                  placeholder="Enter detailed product description..."
                                  required
                                  style="padding: 8px; border: 1px solid #ccc; border-radius: 3px; resize: vertical;"
                                  name="pdesc"></textarea>
                    </td>
                </tr>
                
                <!-- Image Upload -->
                <tr>
                    <td><strong>Product Image:</strong></td>
                    <td>
                        <input type="file" 
                               id="productImage" 
                               
                               accept="image/*"
                               style="padding: 5px;"
                               name="pimg">
                    </td>
                </tr>
                
                
                <!-- Save Button -->
                <tr>
                    <td> </td>
                    <td>
                        <button type="submit" 
                                style="background: #3366cc; color: white; padding: 12px 24px; border: none; border-radius: 4px; cursor: pointer; font-weight: bold;">
                            ðŸ’¾ Save Product
                        </button>
                    </td>
                </tr>
            </table>

        </fieldset>
    </form>
    </center>
</div>

     </div>
</div>

  <script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggleBtn');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('collapsed');
    });
  </script>
</body>
</html>